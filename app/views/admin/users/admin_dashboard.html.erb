<div class="row text-center">
  <div class="col">
    <h1 class="me-3">Admin dashboard</h1>
  </div>
  <div class="container mt-4">
    <div class="row justify-content-center">
      <div class="col-md-10">
        <h2 class="text-center">Users</h2>
        <table class="table table-bordered table-striped">
          <thead class="table-dark">
            <tr>
              <th>ID</th>
              <th>Name</th>
              <th>Email</th>
            </tr>
          </thead>
          <tbody>
            <% @user.each do |user| %>
              <tr>
                <td><%= user.id %></td>
                <td><%= link_to user.first_name, user_path(user) %></td>
                <td><%= user.email %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="col-md-10">
        <h2 class="text-center">Blog Posts</h2>
        <table class="table table-bordered table-striped">
          <thead class="table-dark">
            <tr>
              <th>ID</th>
              <th>Title</th>
              <th>Content
            </tr>
          </thead>
          <tbody>
            <% @blogs.each do |blog| %>
              <tr>
                <td><%= blog.id %></td>
                <td><%= link_to blog.title, blog_path(blog) %></td>
                <td><%= truncate_words(blog.content, 5)%></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%
=begin%>
 <table class="table table-bordered">
          <thead>
            <tr>
              <th>ID</th>
              <th>Title</th>
              <th>Artist</th>
            </tr>
          </thead>
          <tbody>
            <% @beats.each do |beat| %>
              <tr>
                <td><%= beat.id %></td>
                <td><%= beat.title %></td>
              </tr>
            <% end %>
          </tbody>
        </table>  
<%
=end%>
      </div>
    </div>
  </div>

</div>