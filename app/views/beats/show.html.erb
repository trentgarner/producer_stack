<div class="text-center">
  <h1><%= @beat.title %></h1>
  <div class="col-auto m-4">
    <% if @beat.beat.present? %>
      <audio controls>
        <source src="<%= @beat.beat_file_url %>" type="<%= @beat.beat_file_content_type %>">
        Your browser does not support the audio element.
      </audio>
    <% else %>
      <p>No audio available for this beat.</p>
    <% end %>
  </div>
</div>

