<div class="d-flex justify-content-center"> 
  <div class="row mb-3">
    <div class="col">
      <div class="card h-100 blog-card"> 
        <%= image_tag "producer_stack.svg", class: "card-img-top blog-img p-3" %> 
        <div class="card-body d-flex flex-column"> 
          <h5 class="card-title text-center"><%= @blog.title %></h5>
          <hr>
          <div class="flex-grow-1 overflow-auto text-center"> 
            <p class="card-text text-wrap p-4"><%= @blog.content %></p>
          </div>
        </div>
        <div class="card-footer">
          <small class="text-muted float-end">
            <%= @blog.updated_at.in_time_zone("Mountain Time (US & Canada)").strftime('%B %e, %Y %l:%M %p %Z') %>
          </small>
        </div>
        <div class="d-flex">
          <div class="ms-auto p-1">
          <% if @blog.user == current_user %>
            <%= link_to "Edit", edit_blog_path(@blog), class: "btn btn-info mt-3" %>
          <% end %>
            <%= link_to "Back", blogs_path, class: "btn btn-dark mt-3" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
